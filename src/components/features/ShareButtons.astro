---
/**
 * Social share buttons with pre-filled viral copy
 */

interface Props {
  job: string;
  risk: number;
  year: number;
  location: string;
}

const { job, risk, year, location } = Astro.props;

const shareText = `AI says my job as ${job} in ${location} has a ${risk}% disruption risk by ${year} ðŸ˜± Check yours at`;
const shareUrl = 'https://will-ai-replace.me';

const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(shareUrl)}`;
---

<div class="flex flex-wrap justify-center gap-4">
  <!-- Twitter/X -->
  <a
    href={twitterUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-2 rounded-xl bg-surface-800 px-6 py-3 text-surface-100 transition-all hover:bg-surface-700 hover:scale-105"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    <span class="font-medium">Share on X</span>
  </a>
  
  <!-- LinkedIn -->
  <a
    href={linkedinUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center gap-2 rounded-xl bg-surface-800 px-6 py-3 text-surface-100 transition-all hover:bg-surface-700 hover:scale-105"
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    <span class="font-medium">Share on LinkedIn</span>
  </a>
  
  <!-- Copy Link -->
  <button
    type="button"
    onclick="navigator.clipboard.writeText(window.location.href); this.querySelector('span').textContent = 'Copied!';"
    class="inline-flex items-center gap-2 rounded-xl border border-surface-700 bg-surface-900 px-6 py-3 text-surface-100 transition-all hover:bg-surface-800 hover:scale-105"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
    </svg>
    <span class="font-medium">Copy Link</span>
  </button>
</div>
